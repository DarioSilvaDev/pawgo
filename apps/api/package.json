{
  "name": "@pawgo/api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "worker:start": "node dist/worker.js",
    "build": "cd ../../packages/shared && pnpm run build && cd ../../apps/api && pnpm run prisma:generate && pnpm run prisma:migrate && tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prisma:generate": "prisma generate",
    "prisma:fix-client": "node scripts/fix-prisma-client.mjs",
    "prisma:generate:full": "pnpm run prisma:generate && pnpm run prisma:fix-client",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "postinstall": "pnpm run prisma:fix-client"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "8.0.0",
    "@fastify/static": "6.12.0",
    "@pawgo/shared": "workspace:*",
    "@prisma/client": "^5.7.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.6.1",
    "fastify": "^4.24.3",
    "luxon": "^3.7.2",
    "mercadopago": "^2.11.0",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "pg-boss": "^12.5.4",
    "qrcode": "^1.5.4",
    "resend": "^6.9.2",
    "speakeasy": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}